<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background shape -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" /> <!-- Background color -->
            <stroke android:width="1dp" android:color="@android:color/darker_gray"/> <!-- Optional border -->
            <corners android:radius="4dp" /> <!-- Optional rounded corners -->
        </shape>
    </item>

    <!-- Arrow drawable positioned at the end -->
    <item
        android:drawable="@drawable/ic_arrow_drop_down"
        android:gravity="end|center_vertical"
        android:paddingEnd="8dp" /> <!-- Add padding to the end if needed -->

</layer-list>
