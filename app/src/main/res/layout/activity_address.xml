<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/logpg1234"
    android:padding="10dp"
    tools:context=".LoginActivityNew">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/font123"
        android:gravity="center"
        android:text="Welcome"
        android:textColor="@color/white"
        android:textSize="35dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/ipedt"
        android:layout_width="300dp"
        android:layout_height="51dp"
        android:layout_marginTop="484dp"
        android:background="@drawable/roundwhite"
        android:drawablePadding="5dp"
        android:hint="Enter Local IP Address"
        android:inputType="phone"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textColor="@color/black2"
        android:textColorHint="@color/black2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.054"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/postedt"
        android:layout_width="300dp"
        android:layout_height="51dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/roundwhite"
        android:drawablePadding="5dp"
        android:hint="Enter Local Port Number"
        android:inputType="phone"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textColor="@color/black2"
        android:textColorHint="@color/black2"
        app:layout_constraintStart_toStartOf="@+id/ipedt"
        app:layout_constraintTop_toBottomOf="@+id/ipedt" />

    <Button
        android:id="@+id/save"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/blue1"
        android:padding="5dp"
        android:text="Save"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="@+id/postedt"
        app:layout_constraintTop_toBottomOf="@+id/postedt" />

    <ProgressBar
        android:id="@+id/progressbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/save"
        app:layout_constraintEnd_toEndOf="@+id/save"
        app:layout_constraintStart_toStartOf="@+id/postedt"
        app:layout_constraintTop_toTopOf="@+id/save" />

</androidx.constraintlayout.widget.ConstraintLayout>