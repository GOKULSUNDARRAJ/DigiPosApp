<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".StockUpdateDetailActivity">



    <LinearLayout
        android:id="@+id/linearLayou4t"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@color/dgblue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_marginTop="30dp"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:onClick="goback"
                android:src="@drawable/baseline_arrow_back_24"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/semibold"
                android:text="Stock Update Details"
                android:textColor="@color/white"
                android:textSize="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:orientation="horizontal"
        android:weightSum="2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayou4t">


        <LinearLayout
            android:id="@+id/linearLayout4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:orientation="vertical"
            android:paddingTop="4dp"
            android:layout_weight="1"
            android:paddingRight="20dp"
            android:paddingBottom="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="3dp"
                android:layout_weight="1"
                android:visibility="gone"
                android:fontFamily="@font/semibold"
                android:text="Id"
                android:textColor="@color/black"
                android:textSize="16sp"></TextView>

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="3dp"
                android:layout_weight="1"
                android:fontFamily="@font/semibold"
                android:text="BarCode"
                android:textColor="@color/black"
                android:textSize="16sp"></TextView>

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="3dp"
                android:layout_weight="1"
                android:fontFamily="@font/semibold"
                android:text="PLU"
                android:textColor="@color/black"
                android:textSize="16sp"></TextView>

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="3dp"
                android:layout_weight="1"
                android:fontFamily="@font/semibold"
                android:text="Date"
                android:textColor="@color/black"
                android:textSize="16sp"></TextView>

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="3dp"
                android:layout_weight="1"
                android:fontFamily="@font/semibold"
                android:text="Time"
                android:textColor="@color/black"
                android:textSize="16sp"></TextView>

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="3dp"
                android:layout_weight="1"
                android:fontFamily="@font/semibold"
                android:text="Current Quantity"
                android:textColor="@color/black"
                android:textSize="16sp"></TextView>

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="3dp"
                android:layout_weight="1"
                android:fontFamily="@font/semibold"
                android:text="Update Quantity"
                android:textColor="@color/black"
                android:textSize="16sp"></TextView>

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="3dp"
                android:layout_weight="1"
                android:fontFamily="@font/semibold"
                android:text="DoneBy"
                android:textColor="@color/black"
                android:textSize="16sp"></TextView>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="4dp"
            android:paddingRight="20dp"
            android:layout_weight="1"

            android:paddingBottom="10dp"
            app:layout_constraintStart_toEndOf="@+id/linearLayout4"
            app:layout_constraintTop_toTopOf="parent">


            <TextView
                android:id="@+id/textViewId"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="3dp"
                android:layout_weight="1"
                android:visibility="gone"
                android:fontFamily="@font/semibold"
                android:text="Id"
                android:textColor="@color/black2"
                android:textSize="16sp"></TextView>

            <TextView
                android:id="@+id/textViewBarcode"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="3dp"
                android:layout_weight="1"
                android:fontFamily="@font/semibold"
                android:text="BarCode"
                android:textColor="@color/black2"
                android:textSize="16sp"></TextView>

            <TextView
                android:id="@+id/textViewPLU"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="3dp"
                android:layout_weight="1"
                android:fontFamily="@font/semibold"
                android:text="PLU"
                android:textColor="@color/black2"
                android:textSize="16sp"></TextView>

            <TextView

                android:id="@+id/date4"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="3dp"
                android:layout_weight="1"
                android:fontFamily="@font/semibold"
                android:text="Date"
                android:textColor="@color/black2"
                android:textSize="16sp"></TextView>

            <TextView

                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="3dp"
                android:layout_weight="1"
                android:fontFamily="@font/semibold"
                android:text="Time"
                android:textColor="@color/black2"
                android:textSize="16sp"></TextView>

            <TextView
                android:id="@+id/textViewCurrentQty"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="3dp"
                android:layout_weight="1"
                android:fontFamily="@font/semibold"
                android:text="Current Quantity"
                android:textColor="@color/black2"
                android:textSize="16sp"></TextView>

            <TextView
                android:id="@+id/textViewUpdateQty"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="3dp"
                android:layout_weight="1"
                android:fontFamily="@font/semibold"
                android:text="Update Quantity"
                android:textColor="@color/black2"
                android:textSize="16sp"></TextView>

            <TextView
                android:id="@+id/textViewDoneBy"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="3dp"
                android:layout_weight="1"
                android:fontFamily="@font/semibold"
                android:text="DoneBy"
                android:textColor="@color/black2"
                android:textSize="16sp"></TextView>


        </LinearLayout>


    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>








