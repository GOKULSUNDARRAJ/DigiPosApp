        <EditText
            android:id="@+id/typevalue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/blackline"
            android:padding="13dp"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/typevaluet" />

        <TextView
            android:id="@+id/start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:fontFamily="@font/regular"
            android:text="Start"
            android:textColor="@color/black1"
            android:textSize="13dp"
            app:layout_constraintStart_toStartOf="@+id/typevalue"
            app:layout_constraintTop_toBottomOf="@id/typevalue" />

        <EditText
            android:id="@+id/startedt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/blackline"
            android:padding="13dp"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/start" />

        <TextView
            android:id="@+id/end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:fontFamily="@font/regular"
            android:text="End"
            android:textColor="@color/black1"
            android:textSize="13dp"
            app:layout_constraintStart_toStartOf="@+id/startedt"
            app:layout_constraintTop_toBottomOf="@id/startedt" />


        <EditText
            android:id="@+id/endedt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:background="@drawable/blackline"
            android:padding="13dp"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/end" />

        <TextView
            android:id="@+id/itemcount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:fontFamily="@font/regular"
            android:text="itemcount"
            android:textColor="@color/black1"
            android:textSize="13dp"
            app:layout_constraintStart_toStartOf="@+id/endedt"
            app:layout_constraintTop_toBottomOf="@id/endedt" />

        <EditText
            android:id="@+id/itemcountedt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/blackline"
            android:padding="13dp"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/itemcount" />


        <TextView
            android:id="@+id/plu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:fontFamily="@font/regular"
            android:text="PLU"
            android:textColor="@color/black1"
            android:textSize="13dp"
            app:layout_constraintStart_toStartOf="@+id/itemcountedt"
            app:layout_constraintTop_toBottomOf="@id/itemcountedt" />

        <EditText
            android:id="@+id/pluedt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/blackline"
            android:padding="13dp"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/plu" />

        <TextView
            android:id="@+id/done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/regular"
            android:text="Done"
            android:textColor="@color/black1"
            android:textSize="13dp"
            app:layout_constraintStart_toStartOf="@+id/pluedt"
            app:layout_constraintTop_toBottomOf="@id/pluedt" />


        <EditText
            android:id="@+id/doneedt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/blackline"
            android:padding="13dp"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/done" />


        <Button
            android:id="@+id/update"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="50dp"
            android:background="@drawable/bluesolid"
            android:padding="13dp"
            android:text="ADD"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/doneedt"
            app:layout_constraintTop_toBottomOf="@id/doneedt" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>