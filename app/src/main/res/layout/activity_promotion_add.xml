            android:background="@drawable/blackline"
            android:padding="13dp"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/emailtv23567" />


        <TextView
            android:id="@+id/day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:fontFamily="@font/regular"
            android:text="type"
            android:textColor="@color/black1"
            android:textSize="13dp"
            app:layout_constraintStart_toStartOf="@+id/autocompleteTextView624676"
            app:layout_constraintTop_toBottomOf="@+id/autocompleteTextView624676" />

        <EditText
            android:id="@+id/ruletype"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/blackline"
            android:padding="13dp"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
